<!-- Portfolio -->
<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 text-center">
                <h2>From <%= @city_name.capitalize %></h2>
                <hr class="small">
                <div class="row">
                    <div class="col-md-6">
                        <div class="portfolio-item">
                        		  <div class="cuadro_intro_hover img-portfolio img-responsive">
															 <%= image_tag(@mychoice.image_url, :height => "300px", :width => "100%") %>
																<div class="caption">
																	<div class="blur"></div>
																	<div class="caption-text">
																		<h3 style="padding:10px;"><%= p @mychoice.title.truncate(20, separator: /\s/) %></h3>
																		<%= @mychoice.description.truncate(30, separator: /\s/) %><br>
																		<%= @mychoice.address %><br>
																		<%= @mychoice_distance.to_f.round(2) %> kms<br>
																		<%= @mychoice_distance_price.round(2) + @mychoice.price %>€<br><br>
																		<center><% breadcrumb :step_budget %>
                                		<%= link_to "Learn More", experience_path(@mychoice, trail: breadcrumb_trail), class:"btn btn-dark btn-lg", style: "margin: 2px;" %>
                                		<%= link_to "More like this", {:controller => "step_category", :action => "index", :experience => @mychoice, :city_name => @city_name, :mychoice => @mychoice_distance, :multiplier => @multiplier, trail: breadcrumb_trail}, class:"btn btn-dark btn-lg", style: "margin: 2px;" %></center>
