<!-- Header -->
<header id="top" class="header">
<style>
  .header { background-image: url(<%= image_path(@experience.image_url) %>); }
</style>
    <div class="text-vertical-center">
        <h1><%= @experience.title %></h1>
        <h3><%= @experience.description %></h3>
        <br>
        <a href="#about" class="btn btn-dark btn-lg">Find Out More</a>
    </div>
</header>

<!-- About -->
<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2><%= @experience.title %></h2>
                <p class="lead"></a><%= @experience.description %></p>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>

<!-- Services -->
<!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
<section id="services" class="services">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-10 col-lg-offset-1">
                <h2>Related Experiences</h2>
                <hr class="small">
                <div class="row">
                    <% for experience in @experiences.sample(4) %>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <%= image_tag(experience.image_url, :size => "112x80") %>
                                <h4><strong><%= experience.title.truncate(20, separator: /\s/) %></strong></h4>
                                <p><%= experience.description.truncate(30, separator: /\s/) %></p>
                                <%= link_to "Learn More", experience, class: "btn btn-light" %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.col-lg-10 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>

    <!-- Callout -->
    <aside class="callout">
    <style>
     .callout { background-image: url(<%= image_path(@experience.image_url) %>); }
    </style>
        <div class="text-vertical-center">
            <h1><%= @experience.category %></h1>
        </div>
    </aside>

    <!-- Portfolio -->
    <section id="portfolio" class="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h2>Gallery</h2>
                    <hr class="small">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                    <img class="img-portfolio img-responsive" src="http://placehold.it/350x250">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                    <img class="img-portfolio img-responsive" src="http://placehold.it/350x250">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                    <img class="img-portfolio img-responsive" src="http://placehold.it/350x250">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                    <img class="img-portfolio img-responsive" src="http://placehold.it/350x250">
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                    <a href="#" class="btn btn-dark">View More Items</a>
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Call to Action -->
    <aside class="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>The buttons below are impossible to resist.</h3>
                    <a href="#" class="btn btn-lg btn-light">Click Me!</a>
                    <a href="#" class="btn btn-lg btn-dark">Look at Me!</a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Map -->
    <section id="contact" class="map">
    <%= @embed_code %>
    </section>

