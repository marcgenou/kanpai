<p id="notice"><%= notice %></p>

<h1>Listing Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Season</th>
      <th>Date</th>
      <th>Duration</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.title %></td>
        <td><%= experience.category %></td>
        <td><%= experience.description %></td>
        <td><%= experience.image_url %></td>
        <td><%= experience.price %></td>
        <td><%= experience.season %></td>
        <td><%= experience.date %></td>
        <td><%= experience.duration %></td>
        <td><%= experience.tags %></td>
        <td><%= link_to 'Show', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

